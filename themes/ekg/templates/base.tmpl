## -*- coding: utf-8 -*-
<%namespace file="helpers/base_helper.tmpl" import="*"/>
<!DOCTYPE html>
<html lang="${lang}">
    <head>
        ${html_head()}
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-xs-12 leftbar-column">
                    <div class="leftbar">
                        <div class="logo" onmouseover="trigger_pulse();">
                            <div class="logo-img">
                                <object id="svg_obj" type="image/svg+xml" data="/assets/css/images/ekg.svg" onload="svg_onload(this);">
                                </object>
                            </div>
                            <div class="logo-text">
                                <div class="brand">
                                    <a href="${abs_link('/')}">
                                        <p>${blog_title}</p>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <p class="descr">${description or blog_description}</p>
                        <div class="navs-toggle">
                            <button id="navs-toggle" type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navs" aria-expanded="false"> <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>
                        <div id="navs" class="navbar-collapse collapse">
                            <ul class="nav">
                                ${html_navigation_links()}
                            </ul>
                            <div id="pushybox-container" class="vscroll-pane">
                                <ul id="pushybox">
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-8 col-xs-12 content-column">
                    <div>
                        <%block name="content"></%block>
                    </div>
                    <div class="footerbox">
                        ${content_footer}
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
