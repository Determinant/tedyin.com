## -*- coding: utf-8 -*-
<%namespace file="base_helper.tmpl" import="*"/>
<!DOCTYPE html>
<html lang="${lang}">
    <head>
        ${html_head()}
        <%block name="extra_head">
        </%block>
    </head>
    <body>
        <div id="global_container">
            <!-- Menubar -->
            <div class="navbar-fixed-left">
                <div class="logo">
                    <a class="brand" href="${abs_link('/')}">
                        ${blog_title}
                    </a>
                    <br />
                <a class="descr">
                    ${description}
                </a>

                </div>
                <ul class="nav">
                    ${html_sidebar_links()}
                </ul>
                <ul id="pushy_box" class="nav">
                </ul>
                %if search_form:
                ${search_form}
                %endif
            </div>
            <!-- End of Menubar -->
            <div class="container" id="container">
                <div id="post_body">
                    <!--Body content-->
                    <%block name="content"></%block>
                    <!--End of body content-->
                </div>
            </div>
        </div>
        <div class="pager">
            <div class="footerbox">
                ${content_footer}
            </div>
        </div>
    </body>
</html>
